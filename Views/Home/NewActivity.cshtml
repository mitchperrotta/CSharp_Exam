@model Gathering

<form action="/create" method="post" class="col-5 mx-auto">
    <input type="hidden" asp-for="UserId" value="@ViewBag.User.UserId">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Start"></label>
        <input asp-for="Start" class="form-control">
        <span class="text-danger" asp-validation-for="Start"></span>
    </div>
    <div class="form-group">
        <label asp-for="DurationInt"></label>
        <input asp-for="DurationInt" class="form-control">
        <span class="text-danger" asp-validation-for="DurationInt"></span>
    </div>
    <div class="form-group">
        <select asp-for="DurationString" class="form=control">
            <option value="Hours">Hours</option>
            <option value="Minutes">Minutes</option>
        </select>
        <span class="text-danger" asp-validation-for="DurationString"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>
    <input type="submit" value="Create Activity" class="btn btn-success btn-outline-dark">
</form>